<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%=if  @task.completed
     "completed"
     else
     "not completed"
      end %></p>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            class: "btn btn-danger",
            method: :delete,
            data: { confirm: "Are you sure?" } %>